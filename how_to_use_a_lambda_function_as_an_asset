import os.path
$DIRECTORY_NAME = os.path.dirname(__file__)


class $STACK_NAME(Stack):

    def __init__(self, scope: Construct, id: str, **kwargs):
        super().__init__(scope, id, **kwargs)
        
        lambda_.Function(
            self,
